{% extends 'rootiovmailmeBundle::base.html.twig' %}
{% form_theme form 'rootiovmailmeBundle::fields_errors.html.twig' %}

{% block title %} &bull; {% trans %}Suspend account{% endtrans %}{% endblock %}

{% block content %}
    <div class="container suspend">

        <div class="page-header">
            <h1>{% trans %}Suspend account{% endtrans %}</h1>
        </div>

        <form class="form-horizontal" action="{{ path('user_account_suspend') }}"
              method="post" {{ form_enctype(form) }}>
            <fieldset>

                <div class="alert alert-danger"><strong>{% trans %}Warning!{% endtrans %}</strong> {% trans %}Account suspension is irreversible{% endtrans %}</div>

                {{ form_errors(form.password) }}
                {{ form_errors(form.agreement) }}

                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success">
                        {{ flashMessage }}
                    </div>
                {% endfor %}

                <div class="form-group">
                    {{ form_label(form.password, 'Password'|trans, { 'label_attr': {'class': 'control-label'} }) }}
                    {{ form_widget(form.password, { 'attr': {'class': 'form-control input-lg'} }) }}
                </div>

                <div class="form-group">
                    <label class="input-group">
                        {{ form_widget(form.agreement) }} {% trans %}Yes, I want to suspend my account{% endtrans %}
                    </label>
                </div>
                {{ form_rest(form) }}

                <div class="form-actions">
                    <input class="btn btn-primary btn-lg" type="submit" value="{% trans %}Save{% endtrans %} Â»"/>
                </div>

            </fieldset>
        </form>
    </div>
{% endblock %}
